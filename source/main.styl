    border-radius 4px
    box-shadow 0px 0px 3px rgba(black, 0.8)
    display flex
    justify-content stretch
    position relative
    box-sizing border-box
  .close
    position absolute
    right 8px
    top 8px
    background embedurl("images/close.png") no-repeat

  .close
    background-position top right
    background-size 50%
    right 12px
    top 12px
  .inner
    position absolute
    &:before
      position absolute
      top -20px
      left calc(50% \- 15px)
      background embedurl("images/callme-corner.png")
      display block
      width 29px
      height 20px
      content " "
      font-size 1px
    width 296px
    padding 24px 12px 12px 12px
    background #e7e7e7
    text-align center
    input[type="text"]
      width 100%
      box-sizing border-box

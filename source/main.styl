@import "nib"
global-reset()

debug = false
page-width = 998px

placeholder()
  &::-webkit-input-placeholder
    {block}
  &:-moz-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}

$proxima-nova
  font-family "proxima-nova", sans-serif
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    font-smoothing antialiased

$button
  display inline-block
  padding 8px 14px
  border 1px solid rgb(253, 169, 1)
  border-radius 5px
  background linear-gradient( to top, rgb(255,126,0) 0%, rgb(255,192,0) 100%)
  box-shadow 0px 3px #954a09
  color #000
  font-weight 700
  text-shadow 1px 1px rgba(#ffed63, 0.47)
  cursor pointer
  user-select none
  font-size 15px
  text-align center
  text-decoration none
  outline none
  &:hover
    background linear-gradient( to top, rgb(255,192,0) 0%, rgb(255,234,0) 100%)
    border-color rgb(255,234,0)
  &:active
    background linear-gradient( to top, rgb(255,156,0) 0%, rgb(220,135,0) 100%)
    border-color rgb(220,135,0)

a[href^=tel]
  color inherit
  text-decoration none

body
  @extend $proxima-nova
  min-width page-width
  padding-top 74px

.wrap
  width page-width
  margin 0 auto
  position relative
  if debug
    border-left 1px solid green
    border-right 1px solid green

.preload-image
  position absolute
  opacity 0.01
  right 0px
  bottom 0px
  width 1px
  height 1px

form .done
  display none

form.submiting > *
  visibility hidden

form.submiting
  background-image url("images/form-indicator.gif") !important
  background-repeat no-repeat !important
  background-position center !important

form.submited > *
  visibility hidden

form.submited
  position relative
  .done
    display flex
    flex-direction column
    justify-content center
    align-items center
    visibility visible
    position absolute
    top 0px
    left 0px
    right 0px
    bottom 0px
    h3
      font-size 30px !important
      margin-bottom 36px !important
    p
      font-weight 300 !important
      font-size 20px !important
      color black !important

input[type="text"], input[type="email"], select
  height 42px
  background #fff

select
  text-align-last center

label
  display inline-flex
  align-items center
  margin 10px 0
  text-align left
  width 86%
  color rgba(#000, 0.7)
  user-select none

label + label
  margin-top 0

label + input, label + select
  margin-top 0 !important

.checkbox-label
  input
    margin-right 8px

input[type="text"], input[type="email"], textarea, select
  box-sizing border-box
  width 86%
  display inline-block
  outline none
  text-align center
  font-size 18px
  @extend $proxima-nova
  font-weight 300
  box-shadow inset 1px 1px 4px rgba(0, 0, 0, 0.5)
  border 3px solid #ffcc00
  margin-top 10px
  padding 7px 0
  resize none
  +placeholder()
    color #7f7f7f
  &:focus
    +placeholder()
      color rgba(0, 0, 0, 0)
  &[name="phone"]
    +placeholder()
      letter-spacing 1px
[type="submit"]
  @extend $button
  margin-top 16px
  padding 12px 16px


